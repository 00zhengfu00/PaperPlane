<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/basic_settings">

        <android.support.v7.preference.CheckBoxPreference
            android:title="@string/no_picture_mode"
            android:key="no_picture_mode"
            android:defaultValue="false"
            android:summary="@string/no_picture_mode_description" />

        <android.support.v7.preference.CheckBoxPreference
            android:title="@string/in_app_browser"
            android:key="in_app_browser"
            android:defaultValue="true"
            android:summary="@string/in_app_browser_description" />

        <android.support.v7.preference.Preference
            android:title="清除图片缓存"
            android:key="clear_glide_cache"
            android:summary="图片缓存大小"/>

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>