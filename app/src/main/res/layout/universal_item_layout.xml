<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:id="@+id/card_view_item"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:background="?attr/viewBackgroundCustomized">

        <com.marktony.zhihudaily.ui.Views.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/latest_item_iv"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/latest_item_tv_title"
            android:background="?attr/viewBackgroundCustomized"
            android:textColor="?attr/textColorCustomized"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>